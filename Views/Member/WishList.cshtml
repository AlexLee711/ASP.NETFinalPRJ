@model IEnumerable<prjFinalProject.Models.TableWishLists1081753>

@{
    ViewBag.Title = "會員願望清單";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<h2>會員願望清單</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User_Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ENName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User_Account)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Code)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CNName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ENName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>


    <td>
        <a href="@Url.Action("DeleteList")?Wish_Id=@item.Wish_Id" class="btn btn-danger" onclick="return confirm('確定移除 @item.CNName 嗎？')">刪除此項目</a>
    </td>
</tr>
}

</table>
