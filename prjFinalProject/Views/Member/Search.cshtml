@model IEnumerable<prjFinalProject.Models.TableCenters1081753>
@{
    ViewBag.Title = "查詢";
}

<h2>查詢</h2>


@using (Html.BeginForm("Search", "Member", FormMethod.Get))
{
    <p>
        類型：@Html.DropDownList("Genre", "All")
        輸入場域名稱關鍵字：@Html.TextBox("searchString")
        輸入地址關鍵字：@Html.TextBox("adress", "", new { placeholder = "輸入地址、縣市、鄉鎮市區或路名" })
        <input type="submit" value="查詢" />
    </p>

}

<table class="table table-striped">
    <thead>
        <tr>
            <th>場域代號</th>
            <th>場域名稱</th>
            <th>場域地址</th>
            <th>場域年分</th>
            <th>場域種類</th>
            <th>場域電話</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10" style="color:red">
                    查無此資料
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <th>@item.Code</th>
                    <th>@item.CNName</th>
                    <th>@item.Adress</th>
                    <th>@item.Year</th>
                    <th>@item.Genre</th>
                    <th>@item.phone</th>
                </tr>
            }
        }
    </tbody>
</table>

